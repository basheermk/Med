                            @Html.ValidationMessageFor(m => m.LastName)
                        </div>
                    </div>*@
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Address</label>
                        <div class="col-sm-8">
                            @*<input type="text" class="form-control" placeholder="Test">*@
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Address" })
                            @Html.ValidationMessageFor(m => m.Address)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Contact No</label>
                        <div class="col-sm-8">

                            @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control", id = "Contact No" })
                            @Html.ValidationMessageFor(m => m.ContactNo)

                        </div>
                    </div>
                    @*<div class="form-group row">
                        <label class="col-sm-2 col-form-label">Email</label>
