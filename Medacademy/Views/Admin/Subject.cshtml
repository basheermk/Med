<script>

    $('#editSubject').on('show.bs.modal', function () {
        

            var depData = $('#depName').val();
            var depId = $('#pkgId').val();
            var cmpId = $('#courseDrop').val();

           
            $.ajax({
                url: '/Admin/GetPackage?courseid=' + cmpId,
                type: "GET",
                dataType: "json",
                success: function (result) {
                    if (result.list.length > 0) {
                      
                        $("#PackageID").html("");
                        $("#PackageID").append($('<option></option>').val("").html('Select'));
                        $.each(result.list, function (i, item) {
                            $("#PackageID").append($('<option></option>').val(item.Value).html(item.Text));
                           
                            $("#PackageID").val(depId);
                            var Id = $('#PackageID').val();
                          //  $('#DepartmentName').val(Id);
                        });
                        $("#PackageID").prop("disabled", false);
                    }
                    else {
                        $("#PackageID").html("");
                        $("#PackageID").append($('<option></option>').val("").html('No data found'));
                        $("#PackageID").prop("disabled", true);
                    }
                }
            });
        });
   


    $(document).ready(function () {

        IntializeDataTable();

    });
    function AddSubject() {
        window.location.href = '/Admin/AddSubject/';
    }
    function EditSubject(source) {
       // debugger;
        var subjectid = $(source).attr("data-id");
       // alert(groupid);
        $.ajax({
            url: '/Admin/EditSubjectView?subjectid=' + subjectid,
            dataType: 'html',
            success: function (data) {
                $('#editSubject').html(data);
                $.validator.unobtrusive.parse($('#editSubject'));
                $('#editSubject').modal('show');
            },
        });
    }
    function IntializeDataTable() {
        $('#classTable').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true
        });
    }
    function refreshSubjectGrid() {
        $.ajax({
            url: '/Admin/RefreshSubject',
            dataType: 'html',
            success: function (data) {
                $('#class-list-view').html(data);
                IntializeDataTable();
            },
        });
    }

