@model Medacademy.Models.GroupModel
@{
    ViewBag.Title = "AddGroup";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="addpackage">
    @using (Ajax.BeginForm("AddGroups", "Admin", null, new AjaxOptions
    {
        HttpMethod = "POST",
        OnSuccess = "GroupAddSuccess",
        OnFailure = "GroupAddFailed",
    }, new { id = "form-login" }))
    {
        <div class="container">
            <div class="col-12">
                <div class="package_heading">
                    <h3>Add Group</h3>
                </div>
                <form>
                  
                    @*<div class="form-group row">
                        <label class="col-sm-2 col-form-label">Course</label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(m => m.CourseID, Ma.EntityLibrary.Data.Dropdowndata.GetCourseDrop(),  "--Choose--", new { @class = "form-control pv_class-drop-down", @data_live_search = "true", name = "courseDropdown", id = "courseDataDropdown" })
                            @Html.ValidationMessageFor(m => m.CourseID)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Package</label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(m => m.PackageID, new SelectList(new List<Object> { new { value = 0, text = "--Choose--" } }, "value", "text"), new { @class = "form-control division_Select", @data_live_search = "true", @disabled = "disabled" })
                            @Html.ValidationMessageFor(m => m.PackageID)
                        </div>
                    </div>*@

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.GroupName, new { @class = "form-control", placeholder = "Group Name" })
                            @Html.ValidationMessageFor(m => m.GroupName)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">&nbsp;</label>
                        <div class="col-sm-8">
                            <button type="submit" class="btn btn-success">Save</button>
                            <button type="button" class="btn btn-danger" onclick="CloseGroup()">Close</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
</section>
<script>
    function GroupAddSuccess(result) {
        if (result.status) {
            toastrSuccess(result.msg);
            refreshGroupGrid();
        }
        else {
            toastrError(result.msg);
        }
    }
    function GroupAddFailed() {
        toastrError('Group Adding Failed');
    }
    function refreshGroupGrid() {
        $.ajax({
            url: '/Admin/RefreshGroup',
            dataType: 'html',
            success: function (data) {
                $('#class-list-view').html(data);
                IntializeDataTable();
            },
        });
    }

    function IntializeDataTable() {
        $('#classTable').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true
        });
    }
    function CloseGroup() {
        window.location.href = '/Admin/Group/';
    }
    //$("#courseDataDropdown").change(function () {
    //    var courseid = $('option:selected', $(this)).val();
    //    $('#hdfcourse').val(courseid);
    //});

    $(document).on('change', '.pv_class-drop-down', function () {
        var courseid = $(this).val();
        if (courseid != '') {
            // resetDropDown('Class');
            $.ajax({
                url: '/Admin/Getpackages?courseid=' + courseid,
                type: "GET",
                success: function (result) {
                    if (result.list.length > 0) {
                        $("#PackageID").html(""); // clear before appending new list
                        $("#PackageID").append($('<option></option>').val("").html('-- Choose --'));
                        $.each(result.list, function (i, item) {
                            $("#PackageID").append($('<option></option>').val(item.Value).html(item.Text));
                        });
                        $("#PackageID").prop("disabled", false);

                    }
                    else {
                        // resetDropDown('Class');
                        $("#PackageID").html(""); // clear before appending new list
                        $("#PackageID").append($('<option></option>').val("").html('-- No Package Found --'));
                        $("#PackageID").prop("disabled", true);
                    }
                }
            });
        }
        else {
            //  resetDropDown('Class');
        }
    });
</script>

