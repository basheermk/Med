@model Medacademy.Models.UserModel
@{
    ViewBag.Title = "Packages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="breadcrumbsSection package_section" style="display:none;">
    <div class="container">
        <div class="row">
            <div class="col-12">

                <div class="breadcrumbs">
                    <h1>Packages</h1>
                    <ul>
                        <li><a href="/Accounts/Index">Home</a></li>
                        <li>Packages</li>
                    </ul>
                </div><!-- ./breadcrumbs -->

            </div>
        </div>
    </div>
</section>
<!-- ./breadcrumbsSection -->

@if (Model.UserId != 0)
{

    <section class="packages_section commSec">
        <div class="container">
            <div class="col-12">
                <h3 class="sub_package">Our packages</h3>
