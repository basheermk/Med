    function IntializeDataTable() {
        $('#classTable').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true
        });
    }
    function AddTopic() {
        window.location.href = '/Admin/AddTopic/';
    }
    function EditTopic(source) {
        // debugger;
        var topicid = $(source).attr("data-id");
        // alert(groupid);
        $.ajax({
            url: '/Admin/EditTopicView?topicid=' + topicid,
            dataType: 'html',
            success: function (data) {
                $('#editTopic').html(data);
                $.validator.unobtrusive.parse($('#editTopic'));
                $('#editTopic').modal('show');
            },
        });
    }

