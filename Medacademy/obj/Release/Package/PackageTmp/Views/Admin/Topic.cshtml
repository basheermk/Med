                        $("#SubjectID").append($('<option></option>').val(item.Value).html(item.Text));                    
                        $("#SubjectID").val(subId);                        
                    });
                    $("#SubjectID").prop("disabled", false);
                }
                else {
                    $("#SubjectID").html("");
                    $("#SubjectID").append($('<option></option>').val("").html('No data found'));
                    $("#SubjectID").prop("disabled", true);
                }
            }
        });



       
