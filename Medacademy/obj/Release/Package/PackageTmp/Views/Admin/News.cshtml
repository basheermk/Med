
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <ol class="breadcrumb">
                        <li><h3 class="box-title">News & Acheivements</h3></li>
                    </ol>
                    <a class="btn btn-success btn-xs" style="margin-left:5px" onclick="AddNews()">Add News</a>
                </div><!-- /.box-header -->
                <div class="box-body" id="class-list-view">
                    @Html.Partial("~/Views/Admin/_pv_News_Grid.cshtml")
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->

<div class="modal fade" id="editNews">
</div><!-- /.modal --><!--edit Class--->

<script>

    $(document).ready(function () {

        IntializeDataTable();

    });
    function AddNews() {
        window.location.href = '/Admin/AddNews/';
    }


    function IntializeDataTable() {
        $('#classTable').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true
        });
    }

    $(document).on('click', '.confirmDelete', function () {
        var newsid = $(this).attr("data-id");

        swal({
            title: "Are you sure?",
            text: "You will not be able to undo this !",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Yes, delete it!",
            cancelButtonText: "No, cancel!",
            closeOnConfirm: true,
            closeOnCancel: true
        },
function (isConfirm) {
    if (isConfirm) {
        $.ajax({
            url: '/Admin/NewsDelete?newsid=' + newsid,
            type: "GET",
            dataType: 'json',
            success: function (data) {
                if (data.status) {
                    toastrSuccess(data.msg);
                    refreshNewsGrid();
                }
                else {
                    toastrError(data.msg);
                }
            }
        });
    }
});
    });

    function refreshNewsGrid() {
        $.ajax({
            url: '/Admin/RefreshNews',
            dataType: 'html',
            success: function (data) {
                $('#class-list-view').html(data);
                IntializeDataTable();
            },
        });
    }


    function EditNews(source) {
        var Newsid = $(source).attr("data-id");
        $.ajax({
            url: '/Admin/EditNewsView?Newsid=' + Newsid,
            dataType: 'html',
            success: function (data) {
                $('#editNews').html(data);
                $.validator.unobtrusive.parse($('#editNews'));
                $('#editNews').modal('show');
            },
        });
    }

    $(document).on('change', '#packageedit-image-upload', function () {
        //debugger;
        var source = $(this);
        var selectedFile = this.files[0];
        var input = this;
        if (input.files && input.files[0]) {
            var url = input.value;
            var ext = url.substring(url.lastIndexOf('.') + 1).toLowerCase();
            if (ext == "gif" || ext == "png" || ext == "jpeg" || ext == "jpg" || ext == "bmp") {
                selectedFile.convertToBase64(function (base64) {
                    var h = $(document).find('#packageedit-img-preview').html();
                    //alert(h);
                    $(document).find('#packageedit-img-preview').remove();
                    $(document).find('#dummyId1').html("<div class='upload-box'style='background-image:url(" + base64 + ");'id='packageedit-img-preview'>" + h + "</div>");
                    //alert(f);
                    $('#Newseditimage').val(base64);
                });
                var reader = new FileReader();
            }
            else {
                //alert('23');
                $(source).val('');
                toastrWarning('Invalid Filetype');
            }
        }
    });
    File.prototype.convertToBase64 = function (callback) {
        var FR = new FileReader();
        FR.onload = function (e) {
            callback(e.target.result)
        };
        FR.readAsDataURL(this);
    }

    function NewsEditSuccess(result) {
        if (result.status) {
            $('#editNews').modal('hide');
            toastrSuccess(result.msg);
            refreshNewsGrid();
        }
        else {
            toastrError(result.msg);
        }
    }
    function NewsEditFailed() {
        toastrError('Package Editing Failed');
    }

</script>


