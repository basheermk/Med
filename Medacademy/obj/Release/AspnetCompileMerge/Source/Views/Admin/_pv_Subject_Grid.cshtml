<table id="classTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Subject Name</th>
            @*<th>Group Name</th>*@
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{int id = 1;

            foreach (var subjects in new Ma.EntityLibrary.Data.Subject().GetSubjects())
            {
              
                 //  string groups = new Ma.EntityLibrary.Data.Group(subjects.GroupID).GroupName;
                
              
                <tr>
                    <td>@id</td>
                    <td>@subjects.SubjectName</td>
                    
                    @*<td>@groups</td>*@
                    <td>
                        <button type="button" class="btn btn-success btn-xs" data-id="@subjects.SubjectID" onclick="EditSubject(this)">Edit</button>
                        <button type="button" class="btn btn-danger btn-xs confirmDelete" data-id="@subjects.SubjectID">Delete</button>
                    </td>
                </tr>
                id++;
            }
        }
    </tbody>
</table>
